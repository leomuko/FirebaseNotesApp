<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotesActivity">

    <TextView
        android:id="@+id/notes_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="CREATE NOTE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/note_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Note Title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/notes_textView"
        app:layout_constraintStart_toStartOf="@+id/notes_textView"
        app:layout_constraintTop_toBottomOf="@+id/notes_textView" />

    <EditText
        android:id="@+id/note_Details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter note Details"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/note_Title"
        app:layout_constraintStart_toStartOf="@+id/note_Title"
        app:layout_constraintTop_toBottomOf="@+id/note_Title" />
</androidx.constraintlayout.widget.ConstraintLayout>